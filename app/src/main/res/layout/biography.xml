<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
            android:id="@+id/tvBiographyTitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sizeOfBiographyTitle"
            app:layout_constraintTop_toTopOf="parent"
    />
    <ImageView
            android:id="@+id/ivBiographyPicture"
            android:layout_width="@dimen/sizeOfBiographyPicture"
            android:layout_height="@dimen/sizeOfBiographyPicture"
            app:layout_constraintTop_toBottomOf="@id/tvBiographyTitle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="@dimen/sizeOfPadding"
            android:layout_marginTop="@dimen/sizeOfPadding"

    />
    <TextView
            android:id="@+id/tvAboutMe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/ivBiographyPicture"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:hint="@string/stringHintAboutMe"
            android:gravity="center"
    />





</androidx.constraintlayout.widget.ConstraintLayout>
